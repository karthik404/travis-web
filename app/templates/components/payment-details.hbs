<p class='source' data-test-source>{{source}}</p>

{{#if stripe}}
  <p data-test-credit-card>•••• •••• •••• {{subscription.creditCardInfo.lastDigits}}</p>
{{/if}}

{{#unless manual}}
  <p data-test-price>{{price}}</p>
{{/unless}}

{{#if (and stripe monthly subscription.permissions.write)}}
  <span class='notice-banner--yellow' data-test-annual-invitation>
    Save 10% by switching to
    <a href={{concat subscription.billingUrl '?switch_annual=true'}}>
      annual billing
    </a>
  </span>
{{/if}}
